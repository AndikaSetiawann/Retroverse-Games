@model RetroVerseGaming.Models.User
@{
    ViewData["Title"] = Model.Username;
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    var ownedGames = ViewBag.OwnedGames as List<RetroVerseGaming.Models.Game>;
    var gameCount = ViewBag.GameCount ?? 0;
}

<style>
    :root {
        --steam-bg-dark: #1b2838;
        --steam-bg-darker: #171a21;
        --steam-card-bg: rgba(0, 0, 0, 0.3);
        --steam-blue: #66c0f4;
        --steam-text: #c6d4df;
    }

    body {
        background: var(--steam-bg-dark) !important;
        background-image: radial-gradient(circle at 50% 0%, #2a475e 0%, #1b2838 60%) !important;
    }

    .rv-main {
        padding-top: 0;
        max-width: 1000px; /* Steam profile max width */
    }

    /* PROFILE HEADER */
    .rv-profile-container {
        padding-top: 40px;
    }

    .rv-profile-header {
        display: flex;
        gap: 25px;
        margin-bottom: 30px;
        background: rgba(0,0,0,0.4);
        padding: 24px;
        border-radius: 5px;
        backdrop-filter: blur(10px);
    }

    .rv-avatar-frame {
        width: 166px;
        height: 166px;
        position: relative;
        padding: 2px;
        background: linear-gradient(to bottom, #66c0f4, #194668); /* Steam blue gradient */
    }

    .rv-avatar-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        background: var(--steam-bg-darker);
        border: 2px solid var(--steam-bg-darker);
    }

    .rv-profile-details {
        flex-grow: 1;
    }

    .rv-username {
        font-family: "Motiva Sans", "Poppins", sans-serif;
        font-size: 26px;
        color: #ffffff;
        font-weight: 500;
        margin-bottom: 5px;
    }

    .rv-user-location {
        color: #8f98a0;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 6px;
        margin-bottom: 15px;
    }

    .rv-profile-summary {
        font-size: 14px;
        color: var(--steam-text);
        margin-bottom: 20px;
    }
    
    .btn-edit-profile {
        background: rgba(255, 255, 255, 0.1);
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 2px;
        font-size: 14px;
        text-decoration: none;
        display: inline-block;
        transition: 0.2s;
    }

    .btn-edit-profile:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    /* LEVEL BADGE */
    .rv-level-badge {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        min-width: 100px;
    }

    .rv-level-circle {
        width: 52px;
        height: 52px;
        border-radius: 50%;
        border: 2px solid #66c0f4;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        font-weight: bold;
        color: white;
        margin-bottom: 8px;
    }

    .rv-level-label {
        font-size: 12px;
        color: #8f98a0;
    }

    /* MAIN CONTENT & SIDEBAR GRID */
    .rv-profile-grid {
        display: grid;
        grid-template-columns: 1fr 280px;
        gap: 20px;
    }

    /* RECENT ACTIVITY */
    .rv-section-title {
        font-size: 16px;
        color: white;
        margin-bottom: 10px;
        font-weight: 500;
        margin-top: 5px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .rv-activity-card {
        background: rgba(0, 0, 0, 0.2);
        padding: 15px;
        margin-bottom: 10px;
        display: flex;
        gap: 15px;
        transition: 0.2s;
    }
    
    .rv-activity-card:hover {
        background: rgba(0, 0, 0, 0.4);
    }

    .rv-game-thumb {
        width: 184px;
        height: 69px;
        object-fit: cover;
    }

    .rv-game-info h4 {
        color: white;
        font-size: 16px;
        margin-bottom: 5px;
        font-weight: 500;
    }
    
    .rv-game-stats {
        color: #8f98a0;
        font-size: 12px;
    }

    /* SIDEBAR */
    .rv-sidebar-item {
        margin-bottom: 25px;
    }

    .rv-online-status {
        color: #66c0f4;
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 5px;
    }
    
    .rv-badge-mock {
        color: white;
        background: rgba(0,0,0,0.3);
        padding: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 10px;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .stats-link {
        display: flex;
        justify-content: space-between;
        color: #8f98a0;
        text-decoration: none;
        padding: 5px 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .stats-link:hover {
        color: #66c0f4;
    }
    
    .stats-value {
        color: white;
    }
    
    /* MODAL STYLES FOR EDIT PROFILE */
    .modal-content-retro {
        background: var(--steam-bg-dark);
        border: 1px solid #66c0f4;
        color: white;
    }
    
    .form-control-steam {
        background: rgba(0,0,0,0.2);
        border: 1px solid #4b5563;
        color: white;
    }
    
    .form-control-steam:focus {
        background: rgba(0,0,0,0.4);
        border-color: #66c0f4;
        color: white;
    }
</style>

<div class="rv-profile-container">
    
    <!-- HEADER -->
    <div class="rv-profile-header">
        <div class="rv-avatar-frame">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" class="rv-avatar-img" alt="Profile" onerror="this.src='/img/default-avatar.png'">
            }
            else
            {
                <div class="rv-avatar-img d-flex align-items-center justify-content-center bg-dark text-secondary">
                    <i class="fas fa-user fa-4x"></i>
                </div>
            }
        </div>
        
        <div class="rv-profile-details">
            <div class="rv-username">@Model.Username</div>
            <div class="rv-user-location">
                <i class="fas fa-map-marker-alt"></i> Indonesia 
                @if(!string.IsNullOrEmpty(Model.Address)) { <span>â€¢ @Model.Address</span> }
            </div>
            <div class="rv-profile-summary">
                @(string.IsNullOrEmpty(Model.FullName) ? "No summary provided." : Model.FullName)
            </div>
            
            <button type="button" class="btn-edit-profile" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                Edit Profile
            </button>
        </div>
        
        <div class="rv-level-badge">
            <div class="rv-level-label">Level</div>
            <div class="rv-level-circle">@(gameCount / 2 + 1)</div>
        </div>
    </div>

    <!-- MAIN GRID -->
    <div class="rv-profile-grid">
        
        <!-- LEFT COLUMN (ACTIVITY) -->
        <div class="rv-profile-main">
            <div class="rv-section-title">Recent Activity</div>
            
            @if (ownedGames != null && ownedGames.Count > 0)
            {
                @foreach (var game in ownedGames)
                {
                    <div class="rv-activity-card">
                        <img src="@(game.ImageUrl ?? "/img/placeholder.jpg")" class="rv-game-thumb" alt="@game.Title">
                        <div class="rv-game-info">
                            <h4>@game.Title</h4>
                            <div class="rv-game-stats">
                                <i class="fas fa-play-circle me-1"></i> Ready to play
                                <br>
                                <span class="text-success">In Library</span>
                            </div>
                            <div class="mt-2">
                                <a href="/Customer/Library" class="btn btn-sm btn-success px-3" style="font-size: 11px; background: linear-gradient(to right, #66c0f4, #194668); border:none;">PLAY</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="p-4 text-center text-muted" style="background: rgba(0,0,0,0.2);">
                    No recent activity. Go play some games!
                </div>
            }
        </div>

        <!-- RIGHT COLUMN (SIDEBAR) -->
        <div class="rv-profile-sidebar">
            <div class="rv-sidebar-item">
                <div class="rv-section-title">Currently Online</div>
                <div class="rv-online-status">Online</div>
                
                <div class="rv-badge-mock mt-3">
                    <i class="fas fa-medal fa-2x text-warning"></i>
                    <div>
                        <div style="font-size:14px; color:white;">RetroVerse Member</div>
                        <div style="font-size:11px; color:#8f98a0;">Since @Model.CreatedAt.Year</div>
                    </div>
                </div>
            </div>
            
            <div class="rv-sidebar-item">
                 <div class="stats-link">
                     <span>Games Owned</span>
                     <span class="stats-value">@gameCount</span>
                 </div>
                 <div class="stats-link">
                     <span>Reviews</span>
                     <span class="stats-value">0</span>
                 </div>
                 <div class="stats-link">
                     <span>Wishlist</span>
                     <span class="stats-value">@(Model.Wishlist?.Count ?? 0)</span>
                 </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-content-retro">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                    <div class="row">
                         <div class="col-md-5 text-center mb-4">
                             <img src="@(Model.ProfilePictureUrl ?? "/img/default-avatar.png")" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit:cover; border: 4px solid #66c0f4;" id="previewImg">
                             <div>
                                 <label class="btn btn-outline-info btn-sm">
                                     Upload New Avatar
                                     <input type="file" name="profilePicture" style="display: none;" onchange="previewFile(this)">
                                 </label>
                             </div>
                         </div>
                         <div class="col-md-7">
                             <div class="mb-3">
                                 <label class="form-label text-info">Profile Name</label>
                                 <input type="text" name="FullName" class="form-control form-control-steam" value="@Model.FullName" required>
                             </div>
                             <div class="mb-3">
                                 <label class="form-label text-info">Location / Address</label>
                                 <textarea name="Address" class="form-control form-control-steam" rows="2">@Model.Address</textarea>
                             </div>
                             <div class="mb-3">
                                 <label class="form-label text-info">Phone (Private)</label>
                                 <input type="tel" name="PhoneNumber" class="form-control form-control-steam" value="@Model.PhoneNumber">
                             </div>
                         </div>
                    </div>
                    <div class="modal-footer border-top-0">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" style="background: #66c0f4; border:none; color: black; font-weight:bold;">Save Changes</button>
                    </div>
                </form>
                
                <hr class="border-secondary">
                
                <h6 class="text-danger mt-3">Change Password</h6>
                 <form asp-action="ChangePassword" method="post">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <input type="password" name="oldPassword" class="form-control form-control-steam btn-sm" placeholder="Current Password" required />
                        </div>
                         <div class="col-md-4">
                            <input type="password" name="newPassword" class="form-control form-control-steam btn-sm" placeholder="New Password" required />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">Update Password</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewFile(input) {
            var file = input.files[0];
            if(file){
                var reader = new FileReader();
                reader.onload = function(){
                    document.getElementById("previewImg").src = reader.result;
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
}
