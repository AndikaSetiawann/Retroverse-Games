@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - RetroVerse Gaming</title>
    <link rel="icon" type="image/svg+xml" href="/img/favicon-retroverse.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-dark: #0f0f1a;
            --bg-card: #1a1a2e;
            --accent-purple: #7c3aed;
            --accent-pink: #ec4899;
            --accent-cyan: #06b6d4;
            --text-white: #ffffff;
            --gradient-main: linear-gradient(135deg, #7c3aed 0%, #ec4899 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-dark);
            color: white;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            padding: 40px 20px;
        }

        /* Ambient Background */
        .bg-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.4;
            animation: float 15s infinite ease-in-out;
        }

        .shape-1 {
            top: 10%;
            right: 20%;
            width: 500px;
            height: 500px;
            background: var(--accent-purple);
        }

        .shape-2 {
            bottom: 10%;
            left: 10%;
            width: 400px;
            height: 400px;
            background: var(--accent-pink);
            animation-delay: -5s;
        }

        @@keyframes float {
            0%, 100% { transform: translate(0, 0); }
            50% { transform: translate(-30px, -30px); }
        }

        .auth-card {
            background: rgba(26, 26, 46, 0.6);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 24px;
            padding: 40px;
            width: 100%;
            max-width: 600px; /* Wider for register form */
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            position: relative;
            z-index: 10;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .auth-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient-main);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 20px;
            box-shadow: 0 10px 20px rgba(124, 58, 237, 0.3);
        }

        .auth-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .auth-subtitle {
            color: #94a3b8;
            font-size: 0.95rem;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-control {
            background: rgba(0,0,0,0.2);
            border: 1px solid rgba(255,255,255,0.1);
            color: white;
            border-radius: 12px;
            padding-left: 15px;
            height: 58px;
        }
        
        textarea.form-control {
            height: 100px;
        }

        .form-control:focus {
            background: rgba(0,0,0,0.3);
            border-color: var(--accent-purple);
            color: white;
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
        }

        .form-control::placeholder { color: #64748b; }

        .form-floating label {
            color: #94a3b8;
        }

        .btn-auth {
            background: var(--gradient-main);
            color: white;
            border: none;
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            margin-top: 10px;
            transition: all 0.3s;
        }

        .btn-auth:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
            color: white;
        }

        .auth-footer {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid rgba(255,255,255,0.1);
            color: #94a3b8;
            font-size: 0.9rem;
        }

        .auth-footer a {
            color: var(--accent-pink);
            text-decoration: none;
            font-weight: 600;
            margin-left: 5px;
        }

        .auth-footer a:hover {
            color: var(--accent-purple);
            text-decoration: underline;
        }
        
        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border-radius: 12px;
            font-size: 0.9rem;
        }
        
        .btn-back {
            position: absolute;
            top: 20px;
            left: 20px;
            color: rgba(255,255,255,0.6);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            font-weight: 500;
            z-index: 20;
        }
        
        .btn-back:hover {
            color: white;
        }
    </style>
</head>
<body>
    <div class="bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
    </div>

    <a href="/" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>

    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon"><i class="fas fa-user-plus"></i></div>
            <h1 class="auth-title">Create Account</h1>
            <p class="auth-subtitle">Join the RetroVerse community today</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
            </div>
        }

        <form method="post" asp-action="Register">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" name="FullName" class="form-control" id="fullname" placeholder="Full Name" required />
                        <label for="fullname">Full Name</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" name="Username" class="form-control" id="username" placeholder="Username" required />
                        <label for="username">Username</label>
                    </div>
                </div>
            </div>

            <div class="form-floating">
                <input type="email" name="Email" class="form-control" id="email" placeholder="name@example.com" required />
                <label for="email">Email Address</label>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="password" name="Password" class="form-control" id="password" placeholder="Password" required minlength="6" />
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="tel" name="PhoneNumber" class="form-control" id="phone" placeholder="Phone" required />
                        <label for="phone">Phone Number</label>
                    </div>
                </div>
            </div>

            <div class="form-floating">
                <textarea name="Address" class="form-control" id="address" placeholder="Address" required></textarea>
                <label for="address">Full Address</label>
            </div>

            <button type="submit" class="btn-auth">
                Create Account
            </button>
        </form>

        <div class="auth-footer">
            Already have an account? 
            <a asp-action="Login">Sign In</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>